<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.Capstonedswms" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@null</item>
        <item name="colorPrimary">@color/darkgreen</item>
        <item name="colorAccent">@color/black</item>

    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Positive button style -->
        <item name="colorAccent">@null</item>

        <!-- Negative button style -->
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Title text color -->
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Message text color -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Burger">
        <item name="colorControlNormal">@color/white1</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/white1</item>
        <item name="android:windowBackground">#80000000</item>
        <!-- Add any other style attributes you want to customize -->
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">#385802</item> <!-- Set your desired text color here -->
    </style>

    <style name="Theme.Capstonedswms" parent="Base.Theme.Capstonedswms" />

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <!-- You can define other dialog attributes here if needed -->
    </style>
</resources>